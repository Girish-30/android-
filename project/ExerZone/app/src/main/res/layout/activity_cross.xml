<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/t"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cross">

    <TextView
        android:id="@+id/txtcross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="CROSS PUNCH"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imgcross"
        android:layout_width="wrap_content"
        android:layout_height="216dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        app:srcCompat="@drawable/cross2" />

    <TextView
        android:id="@+id/txtcross1"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="In boxing, a cross (also commonly called a straight) is a punch usually thrown with the dominant hand the instant an opponent leads with his opposite hand. The blow crosses over the leading arm, hence its name. It is a power-punch like the uppercut and hook."
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />
</RelativeLayout>