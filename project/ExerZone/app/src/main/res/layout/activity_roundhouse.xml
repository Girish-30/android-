<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".roundhouse">


    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="ROUNDHOUSE"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="245dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView16"
        app:srcCompat="@drawable/roundhouse2" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView12"
        android:text="A roundhouse kick is a kick in which the attacker swings their leg around in a semicircular motion, striking with the front of the leg or foot. This type of kick is utilized in many different martial arts and is popular in both non-contact and full-contact martial arts competitions."
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp" />
</RelativeLayout>